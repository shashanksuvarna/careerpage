<?xml version="1.0" encoding="UTF-8"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="career_data" resource="default" engine="innodb" comment="career_data">

       <column xsi:type="smallint" name="id" padding="7" unsigned="false" nullable="false" identity="true" comment="ID" />
      <column xsi:type="varchar" name="job_role" nullable="false" length="20" comment="job_role" />
      <column xsi:type="varchar" name="place" nullable="false" length="20" comment="Place" />
      <column xsi:type="varchar" name="email" nullable="false" length="50" comment="Email" />
      <column xsi:type="int" name="experience" nullable="false" length="20" comment="experience" />
      <column xsi:type="text" name="job_description" nullable="false" length="20" comment="Job description" />
      <column xsi:type="text" name="job_responsibility" nullable="false" length="20" comment="Job responsibility"  />
       <column xsi:type="text" name="available" nullable="false" length="20" comment="available"  />
      
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
</schema>